@model ContosoModels.Courses

@{
    ViewBag.Title = "Edit";
    List<SelectListItem> list = new List<SelectListItem>();
    ContosoService.DepartmentService deptS = new ContosoService.DepartmentService();
    foreach (var department in deptS.GetAllDepartments())
    {
        list.Add(new SelectListItem() { Text = department.Id.ToString(), Value = department.Id.ToString() });
    }
}

